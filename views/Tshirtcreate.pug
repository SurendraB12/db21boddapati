extends layout 
 
block content 
  h1= title  
  div(class="card card-body  text-white text-center" class="Tshirt_class" style="width: 30rem; background-color:#7e7ec2" )
    form(id='TshirtForm' , action="/resource/Tshirt", method="POST") 
        div(class="form-group d-flex justify-content-evenly m-2 Tshirt_input")
            label(for='brand' class="col-sm-4" class="Tshirt_label") Tshirt brand 
            input#brand(type='text', name='brand' class="form-control") 
        div(class="form-group d-flex justify-content-evenly m-2 Tshirt_input")
            label(for='material' class="col-sm-4" class="Tshirt_label") Tshirt material 
            input#material(type='text', name='material' class="form-control") 
        div(class="form-group d-flex justify-content-evenly m-2 Tshirt_input")
            label(for='cost' class="col-sm-4" class="Tshirt_label") Tshirt cost 
            input#cost(type='number', name='cost' class="form-control ") 
        div(class='text-center')
            input(type="submit" class="btn create_btn" ) 
        div(class="d-flex flex-row justify-content-center create_btn")      
            a(href='/Tshirt' class="btn") Go To Tshirts
    
    script. 
        document.forms['TshirtForm'].addEventListener('submit', (event) => { 
        event.preventDefault(); 
        // TODO do something here to show user that form is being submitted 
        fetch(event.target.action, { 
            method: 'POST', 
            body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
        }).then((resp) => { 
            return resp.json(); // or resp.text() or whatever the server sends 
        }).then((body) => { 
            alert("Save succeded") 
            // TODO handle body 
        }).catch((error) => { 
            // TODO handle error 
            alert("Save failed " + error ) 
        }); 
        }); 