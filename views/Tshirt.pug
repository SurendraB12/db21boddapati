extends layout

block content
  h1= title
  p Welcome to the Tshirt pug
  div(class="container-fluid")
        div(class="row")
            - let Tshirt = results
                
  div(class="container-fluid") 
    div(class="row  m-1") 
      each item in Tshirt 
       - let destination = `dispatch(\"/Tshirt/update?id=${item._id}\")` 
        div(class="row-sm-2", class="m-1") Tshirt #{item.brand}(#{item.material}) is #{item.cost}
            button.btn( class="btn-primary ml-1", onclick= destination) Update
            
        script.                
            function buy(itemNo)
            {
                  alert(`you purchased Item ${itemNo+1}`)
            }
        script. 
            function dispatch(path)
            { 
              window.location.href=path 
            }