extends layout

block content
  h1= title
  p Welcome to the Tshirt pug
  div(class="container-fluid")
        div(class="row")
            -
                let Tshirt = results            
            each v,index in Tshirt
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.material}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
  script.                
    function buy(itemNo)
    {
        alert(`you purchased Item ${itemNo+1}`)
    }